{
  "manifest_version": 2,

  "name": "PicDrop.io",
  "description": "Save your images easly with Picdrop.io",
  "version": "0.0.32",

  "browser_action": {
   "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
   "activeTab",
   "contextMenus",
   "background"
   ],

   "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.2.0.min.js", "content.js"],
      "css": ["iframe.css"]
    }
  ],
  "web_accessible_resources": [
        "iframe.css",
        "iframe.html"
    ]
}
